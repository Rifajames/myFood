<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/cat_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/vCardContainerTestimonial"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:clipToPadding="false"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="H,1:1">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@drawable/cat_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivCategories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:src="@drawable/pop_1"/>

                        <TextView
                            android:id="@+id/txtItemCategories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:layout_constraintStart_toStartOf="@id/ivCategories"
                            app:layout_constraintEnd_toEndOf="@id/ivCategories"
                            app:layout_constraintTop_toBottomOf="@id/ivCategories"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

</layout>