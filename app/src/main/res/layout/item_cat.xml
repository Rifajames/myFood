<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/cat_background"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ivCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/pop_1"/>

    <TextView
        android:id="@+id/txtItemCategories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pizza"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/ivCategories"
        app:layout_constraintStart_toStartOf="@id/ivCategories"/>

</androidx.constraintlayout.widget.ConstraintLayout>